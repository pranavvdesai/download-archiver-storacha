{
  "manifest_version": 3,
  "name": "DownloadArchiver",
  "version": "1.0",
  "description": "Auto-upload your Chrome downloads to your Storacha Space",
  "permissions": ["downloads", "storage", "notifications", "contextMenus"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "options_page": "options.html"
}
